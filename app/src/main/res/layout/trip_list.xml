<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="24dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
       <TextView
           android:id="@+id/date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="9-10-2019"
           android:textStyle="bold"
           />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22:45"
        android:textStyle="bold"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/pop_menu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:background="@drawable/ic_twotone_reorder_24"
        android:gravity="center"
        />
</LinearLayout>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names"/>
     <TextView
         android:id="@+id/status"
         android:layout_marginStart="40dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:text="upcoming"
         tools:text="upcoming"/>

 </LinearLayout>

        <View android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#86000000"
            android:layout_marginTop="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_startPoint"
            android:textSize="22sp"

            android:textColor="@color/black"
            tools:text="@tools:sample/lorem"
            android:layout_marginTop="8dp"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />
        <TextView
            android:id="@+id/tv_endPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"

            android:textColor="@color/black"
            tools:text="Hello"
            android:layout_marginTop="8dp"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#86000000"
            android:layout_marginTop="5dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6"
            >
        <Button
            android:id="@+id/startTrip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:text="Start"
            android:gravity="center"
            android:layout_marginTop="25dp"
            />
            <ImageView
                android:id="@+id/show"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_pencil"/>
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>